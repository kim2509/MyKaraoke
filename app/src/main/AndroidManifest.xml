<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tessoft.mykaraoke">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".KaraokeApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayListMainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="재생목록"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".FullscreenPlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen_player"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".SearchResultActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="검색결과"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".ItemDetailActivity" />
        <activity android:name=".EditItemActivity" />
        <activity android:name=".SearchActivity"></activity>
    </application>

</manifest>
