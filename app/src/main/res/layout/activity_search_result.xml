<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ListView
        android:id="@+id/listSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutGuide"
        android:choiceMode="singleChoice"
        android:listSelector="#98def4">

    </ListView>

    <LinearLayout
        android:id="@+id/layoutGuide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:background="#a81d83"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="#ffffff"
            android:background="#4d06e7"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginRight="3dp"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초 후에 첫번째 항목이 자동재생됩니다."
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="취소"
            android:onClick="cancelTimer"/>
    </LinearLayout>
</RelativeLayout>
